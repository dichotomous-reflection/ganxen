    filename1 = 'res.jpg'
    pyplot.savefig(filename1)
    pyplot.close()"""

    # Resizing
    #res = rescale(res, (int(512 / res.shape[0]), int(512 / res.shape[0]), 1),
                           #anti_aliasing=False, order=0)
    # Sending back
    buf = BytesIO()
